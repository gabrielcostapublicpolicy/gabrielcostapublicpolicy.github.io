{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Income Deprivation in Scotland",
    "subtitle": "Percentage of population in income deprivation by local authority.",
    "anchor": "start"
  },
  "width": 400,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/maps/scotland_local_authorities.json",
    "format": {"type": "topojson", "feature": "scotland_local_authorities"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "values": [
            {"region": "Glasgow City", "deprivation": 18.4},
            {"region": "Inverclyde", "deprivation": 15.2},
            {"region": "North Lanarkshire", "deprivation": 16.1},
            {"region": "Shetland Islands", "deprivation": 4.5}
          ]
        },
        "key": "region",
        "fields": ["deprivation"]
      }
    }
  ],
  "projection": {"type": "identity", "reflectY": true},
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "field": "deprivation",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "legend": {"title": "% Deprived"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Authority"},
      {"field": "deprivation", "type": "quantitative", "title": "Income Deprivation %"}
    ]
  }
}