{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Labor Productivity Index",
    "fontSize": 12
  },
  "width": "container",
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/gabrielcostapublicpolicy/gabrielcostapublicpolicy.github.io/main/cc6_data3.json"
  },
  "mark": {
    "type": "line",
    "strokeWidth": 2,
    "color": "#2ecc71"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Index (2012=100)"
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "format": "%Y-%m", "title": "Date"},
      {"field": "value", "type": "quantitative", "format": ".1f", "title": "Index"}
    ]
  }
}