{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Monthly Average Price and Month-on-Month Inflation",
    "subtitle": "Source: generated from db_prices.csv (Task 8)"
  },
  "data": {
    "url": "data/cc8_monthly_inflation.csv",
    "format": { "type": "csv" }
  },
  "width": "container",
  "vconcat": [
    {
      "height": 260,
      "mark": { "type": "line", "tooltip": true },
      "encoding": {
        "x": { "field": "month", "type": "temporal", "title": "Month" },
        "y": { "field": "price", "type": "quantitative", "title": "Average Price" }
      }
    },
    {
      "height": 260,
      "mark": { "type": "line", "tooltip": true },
      "encoding": {
        "x": { "field": "month", "type": "temporal", "title": "Month" },
        "y": {
          "field": "inflation_mom_pct",
          "type": "quantitative",
          "title": "Inflation (MoM, %)"
        }
      }
    }
  ]
}
