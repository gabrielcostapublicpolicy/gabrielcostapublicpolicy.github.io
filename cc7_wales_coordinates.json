{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Social Support Centers in Wales",
    "subtitle": "Coordinated mapping of support hubs in major Welsh cities."
  },
  "width": 400,
  "height": 500,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/maps/wales_local_authorities.json",
        "format": {"type": "topojson", "feature": "wales_local_authorities"}
      },
      "projection": {"type": "identity", "reflectY": true},
      "mark": {"type": "geoshape", "fill": "#e0e0e0", "stroke": "white"}
    },
    {
      "data": {
        "values": [
          {"city": "Cardiff", "lat": 51.48, "long": -3.17, "type": "Main Hub"},
          {"city": "Swansea", "lat": 51.62, "long": -3.94, "type": "Regional Office"},
          {"city": "Wrexham", "lat": 53.04, "long": -2.99, "type": "Community Center"}
        ]
      },
      "mark": {"type": "circle", "size": 100, "color": "darkblue"},
      "encoding": {
        "longitude": {"field": "long", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "tooltip": [
          {"field": "city", "type": "nominal"},
          {"field": "type", "type": "nominal"}
        ]
      }
    }
  ]
}